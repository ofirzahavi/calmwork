<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/sea_boat">


    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1" android:layout_gravity="center">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:layout_gravity="left|center_vertical"
                android:layout_marginTop="50dp">
            <Spinner
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner" android:layout_gravity="left|center_vertical"
                    android:background="@drawable/round_edges" android:layout_marginLeft="5dp"
                    />

            <com.calm.android.view.MyEditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp">


            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="right|center_vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Languages:"
                    android:id="@+id/textView"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <Spinner
                        android:layout_width="235dp"
                        android:layout_height="35dp"
                        android:id="@+id/spinner1" android:background="@drawable/round_edges"
                        android:layout_marginTop="6dp" android:layout_marginLeft="5dp"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Add "
                        android:id="@+id/button" android:singleLine="false" android:textSize="12dp"
                        android:background="@drawable/round_button" android:layout_marginLeft="10dp"
                        android:textColor="#ffffff" android:textStyle="bold"/>
            </LinearLayout>
            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/listView"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills:"
                    android:id="@+id/textView1"/>
            <Spinner
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:entries="@array/subject_array_skills"
                    android:prompt="@string/subject_prompt"
                    android:id="@+id/editskills_spinner_subject" android:spinnerMode="dialog" android:gravity="center"
                    android:textAlignment="center" android:layout_marginLeft="35dp"
                    android:background="@drawable/round_edges"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content" android:layout_gravity="center">
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox" android:textSize="8dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Up To"
                            android:id="@+id/textView2" android:textSize="10dp" android:layout_gravity="top"
                            android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <Spinner
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:entries="@array/level_array_skills"
                        android:prompt="@string/level_prompt"
                        android:gravity="center" android:spinnerMode="dialog"
                        android:id="@+id/editskills_spinner_level" android:textAlignment="center"
                        android:layout_gravity="center" android:focusable="false"
                        android:background="@drawable/round_edges"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Add"
                        android:id="@+id/editskills_button_add_skills" android:layout_gravity="center"
                        android:background="@drawable/round_button" android:layout_marginLeft="10dp"
                        android:textSize="12dp" android:textStyle="bold" android:textColor="#ffffff"/>
            </LinearLayout>
            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/skills_list"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

