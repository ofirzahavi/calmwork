<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/sea_boat">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <Spinner
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/spinner" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New EditText"
                android:id="@+id/editText"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp">

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New EditText"
                android:id="@+id/editText1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="right|center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages:"
                android:id="@+id/textView"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <Spinner
                    android:layout_width="235dp"
                    android:layout_height="35dp"
                    android:id="@+id/spinner1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Language"
                    android:id="@+id/button" android:singleLine="false" android:textSize="12dp"/>
        </LinearLayout>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/listView"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills:"
                android:id="@+id/textView1"/>
        <Spinner
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:entries="@array/subject_array_skills"
                android:prompt="@string/subject_prompt"
                android:id="@+id/editskills_spinner_subject" android:spinnerMode="dialog" android:gravity="center"
                android:textAlignment="center" android:layout_marginLeft="35dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content" android:layout_gravity="center">
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:id="@+id/checkBox" android:textSize="8dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Up To"
                        android:id="@+id/textView2" android:textSize="10dp" android:layout_gravity="top"
                        android:layout_marginLeft="3dp"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:entries="@array/level_array_skills"
                    android:prompt="@string/level_prompt"
                    android:gravity="center" android:spinnerMode="dialog"
                    android:id="@+id/editskills_spinner_level" android:textAlignment="center"
                    android:layout_gravity="center" android:focusable="false"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Add"
                    android:id="@+id/editskills_button_add_skills"/>
        </LinearLayout>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/skills_list"/>
    </LinearLayout>


</LinearLayout>