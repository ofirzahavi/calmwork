<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/sea_boat">



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:background="#ffffff" android:alpha="0.95">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject:"
                    android:id="@+id/projectscreen_subject_to_set_textview" android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="3dp" android:textStyle="bold" android:textColor="#010101"
                    android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Level:"
                android:id="@+id/projectscreen_level_textview" android:layout_gravity="left|center_vertical"
                android:textStyle="bold" android:textColor="#010101"
                android:layout_marginLeft="3dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language:"
                    android:id="@+id/projectscreen_language_to_set__textview" android:layout_gravity="center|left"
                    android:textStyle="bold" android:textColor="#010101"
                    android:layout_marginLeft="3dp"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget:"
                android:id="@+id/projectscreen_budget_textview" android:layout_gravity="left|center_vertical"
                android:textStyle="bold" android:textColor="#010000"
                android:layout_marginLeft="3dp"/>
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollview" android:layout_gravity="left|center_vertical"
                android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned to:"
                android:id="@+id/projectscreen_assignedto_textview" android:layout_gravity="left|center_vertical"
                android:textStyle="bold" android:textColor="#010101" android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="1dp"
            android:background="#ffffff" android:alpha="0.95">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:id="@+id/textview5" android:layout_gravity="center" android:textStyle="bold"
                android:textColor="#010000" android:layout_marginTop="5dp"/>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollview2" android:layout_gravity="center" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical" android:layout_marginTop="1dp"
            android:background="#ffffff" android:alpha="0.95">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Files"
                  android:id="@+id/textview6" android:layout_gravity="center" android:textStyle="bold"
                  android:textColor="#010101" android:layout_marginTop="5dp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/files_list" android:layout_gravity="center" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical" android:layout_marginTop="1dp"
            android:background="#ffffff" android:alpha="0.95">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Teachers"
                  android:id="@+id/textview6" android:layout_gravity="center" android:textStyle="bold"
                  android:textColor="#010101" android:layout_marginTop="5dp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/teachers_list" android:layout_gravity="center" android:layout_marginTop="10dp"/>
    </LinearLayout>


</LinearLayout>