<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/sea_boat">

    <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            android:id="@+id/newproject_subject" android:layout_gravity="center" android:layout_marginTop="5dp"
            android:textColor="#ffffff"/> -->


    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1" android:layout_gravity="center">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create a new project"
                    android:id="@+id/textView" android:layout_gravity="center" android:layout_marginTop="5dp"
                    android:textColor="#7CFC00" android:textStyle="bold" android:enabled="true"
                    android:focusableInTouchMode="true"/>
            <Spinner
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:entries="@array/subject_array"
                    android:prompt="@string/subject_prompt"
                    android:id="@+id/newproject_spinner_subject" android:spinnerMode="dialog" android:gravity="center"
                    android:layout_gravity="center" android:textAlignment="center" android:background="@drawable/round_edges"
                    android:layout_marginTop="10dp" android:clickable="true" android:alpha="0.8"
                    />
            <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:id="@+id/newproject_level" android:layout_gravity="center" android:layout_marginTop="5dp"
                    android:textColor="#ffffff"/>    -->
            <Spinner
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:entries="@array/level_array"
                    android:prompt="@string/level_prompt"
                    android:gravity="center" android:spinnerMode="dialog"
                    android:id="@+id/newproject_spinner_level" android:textAlignment="center"
                    android:layout_gravity="center" android:background="@drawable/round_edges"
                    android:layout_marginTop="3dp" android:alpha="0.8" android:clickable="true"
                    />

            <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:id="@+id/newproject_language" android:layout_gravity="center" android:layout_marginTop="5dp"
                    android:textColor="#ffffff"/>    -->
            <Spinner
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:entries="@array/languages_array"
                    android:prompt="@string/languages_prompt" android:gravity="center"
                    android:id="@+id/newproject_spinner_language" android:layout_gravity="center" android:spinnerMode="dialog"
                    android:background="@drawable/round_edges" android:layout_marginTop="3dp" android:alpha="0.8"
                    android:clickable="true"/>


            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/due_date_for_project"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"/>      -->
            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:measureWithLargestChild="true"
                android:orientation="horizontal"
                android:padding="6sp"
                android:layout_alignParentBottom="true" android:layout_marginTop="18dp"
                android:background="#00ffffff" android:layout_gravity="center">

                <EditText
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/newproject_edittext_price" android:layout_gravity="center" android:textSize="12dp"
                    android:inputType="number" android:textColor="#ffffff"
                    android:background="@drawable/round_button" android:alpha="0.9" android:textStyle="bold"
                    android:minWidth="15dp" android:textIsSelectable="false" android:maxWidth="50dp"
                    android:gravity="center" android:hint="@string/budget" android:textColorHint="#ffffff"
                    android:layout_marginRight="10dp"/>
                <Button android:layout_width="75dp" android:layout_height="75dp" android:text="@string/add_notes"
                        android:id="@+id/newproject_add_notes_button" android:layout_gravity="center" android:textSize="12dp"
                        android:textStyle="bold" android:background="@drawable/round_button" android:enabled="true"
                        android:textColor="#ffffff" android:shadowColor="#010001" android:focusable="true"
                        android:focusableInTouchMode="true" android:alpha="0.9" android:gravity="center"
                        android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="@string/due_date"
                    android:id="@+id/newproject_button_due_date" android:layout_gravity="center"
                    android:textSize="12dp" android:textStyle="bold" android:background="@drawable/round_button"
                    android:enabled="true" android:textColor="#ffffff"
                    android:shadowColor="#010001" android:focusable="false" android:focusableInTouchMode="false"
                    android:alpha="0.9" android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                    android:id="@+id/buttonsLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:measureWithLargestChild="true"
                    android:orientation="horizontal"
                    android:padding="6sp"
                    android:layout_alignParentBottom="true" android:layout_marginTop="3dp"
                    android:background="#00ffffff" android:layout_gravity="center">

                <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/newproject_take_pic_btn"
                        android:onClick="getPictureFromCameraClick"
                        android:layout_gravity="center"
                        android:src="@drawable/camerafinal"
                        android:background="@drawable/round_button" android:adjustViewBounds="false" android:alpha="0.9"
                        android:layout_marginRight="10dp" android:longClickable="false"/>

                <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/newproject_gallery_btn"
                        android:onClick="getPictureFromGalleryClick"
                        android:layout_gravity="center"
                        android:src="@drawable/g"
                        android:background="@drawable/round_button" android:alpha="0.9"
                        android:layout_marginRight="10dp"/>

                <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/newproject_dropbox_btn"
                        android:layout_gravity="center"
                        android:src="@drawable/dropfinal"
                        android:background="@drawable/round_button" android:alpha="0.9"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="45dp"
            >
        <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/images_horizontal_scrollview"
                android:gravity="center">

            </LinearLayout>



    </HorizontalScrollView>



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:id="@+id/newproject_button_next"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:text="Submit Project"
                android:layout_gravity="center"
                android:singleLine="true" android:background="@drawable/round_edges" android:textColor="#010101" android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:clickable="true" android:textSize="12dp" android:layout_marginTop="9dp" android:focusable="false"
                android:focusableInTouchMode="false" android:alpha="0.9"/>

    </LinearLayout>

</LinearLayout>