<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#439bc2">

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studenthome_switch_student_or_ninja_fake" android:layout_gravity="center" android:textOff="@string/student_mode"
            android:textOn="@string/ninja_mode"
            android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Ofir Zahavi"
            android:id="@+id/textView_fake" android:layout_gravity="center" android:textColor="#010101"
            android:textStyle="bold" android:layout_marginTop="5dp"/>
    <Button
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:id="@+id/studenthome_button_create_new_project_fake" android:layout_gravity="center" android:layout_marginTop="10dp"
            android:textSize="10dp" android:background="#aae002" android:textStyle="bold" android:textColor="#ffffff"
            android:text="@string/create_new_project" android:clickable="true"/>
    <ScrollView
            android:layout_width="315dp"
            android:layout_height="200dp"
            android:id="@+id/scrollview_fake" android:layout_gravity="center" android:layout_marginTop="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <ListView
                    android:layout_width="318dp"
                    android:layout_height="200dp"
                    android:id="@+id/studenthome_listview_worklist_fake" android:layout_gravity="center"
                    android:divider="#79ff25" android:choiceMode="none"
                    android:drawSelectorOnTop="false"
                    android:entries="@array/bluff_array"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/studenthome_buttonslayout_fake"
            android:layout_height="100dp"
            android:layout_width="fill_parent"
            android:measureWithLargestChild="true"
            android:orientation="horizontal"
            android:padding="6sp"
            android:layout_alignParentBottom="true" android:layout_marginTop="50dp">

        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/work_in_progress"
                android:id="@+id/studenthome_button_work_in_progress_fake" android:textSize="10dp"
                android:textStyle="bold" android:textColor="#ffffff" android:background="#aae002"
                android:layout_marginRight="5dp" android:clickable="true" android:layout_gravity="center"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/studenthome_button_awaiting_response_fake" android:textSize="10dp"
                android:text="@string/awaiting_response" android:background="#aae002" android:textColor="#ff3e2b"
                android:textStyle="bold" android:layout_marginRight="5dp" android:clickable="true"
                android:enabled="false" android:layout_gravity="center"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/past_projects"
                android:id="@+id/studenthome_button_past_projects_fake" android:layout_gravity="center" android:textSize="10dp"
                android:background="#aae002" android:textStyle="bold" android:textColor="#ffffff"
                android:layout_marginRight="5dp" android:clickable="true"/>
    </LinearLayout>

</LinearLayout>