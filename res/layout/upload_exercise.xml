<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/green_background"
    android:clickable="false">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="92dp"
            android:id="@+id/camera_picture" android:layout_gravity="left|center_vertical"
            android:layout_alignParentRight="true" android:layout_alignLeft="@+id/spinner1"/>

    <Spinner
        android:layout_width="92dp"
        android:layout_height="31dp"
        android:id="@+id/spinner_language"
        android:spinnerMode="dropdown"
        android:layout_alignLeft="@+id/spinner_subject"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="0dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_alignLeft="@+id/spinner_subject"
        android:layout_below="@+id/spinner_language"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp" />

    <Spinner
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:id="@+id/spinner_subject"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/imageView"
        android:spinnerMode="dropdown"
        android:layout_marginTop="0dp" />

    <Spinner
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:id="@+id/spinner1"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_below="@+id/spinner_language" />

    <Spinner
        android:layout_width="138dp"
        android:layout_height="27dp"
        android:id="@+id/spinner_level"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Tag"
        android:id="@+id/textView"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignLeft="@+id/spinner_language"
        android:textColor="#000000" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:id="@+id/button"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:background="#bababa" />

</RelativeLayout>